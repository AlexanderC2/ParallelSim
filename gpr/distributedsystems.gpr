with "config.gpr";

abstract project DistributedSystems is

   CompilerSwitches := ();
   BinderSwitches   := ();
   LinkerSwitches   := ();

   case Config.mpich2 is
      when "On" =>
	 LinkerSwitches   := LinkerSwitches&Config.MPICH2LIB;
         CompilerSwitches := CompilerSwitches&Config.MPICH2INC;
      when "Off" =>
   end case;

end DistributedSystems;
