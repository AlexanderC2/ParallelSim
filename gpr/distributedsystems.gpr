with "config.gpr";

abstract project DistributedSystems is

   CompilerSwitches := ();
   BinderSwitches   := ();
   LinkerSwitches   := ();

   case Config.mpich2 is
      when "On" =>
	     LinkerSwitches:=LinkerSwitches
		   &("-L"&Config.MPICH2LIB)
		   &("-lmpich")
                   &("-L/usr/lib/mpich2/lib"); -- Fedora hack
      when "Off" =>
   end case;

end DistributedSystems;
